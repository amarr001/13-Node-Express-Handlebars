<h1>EAT DA BURGER</h1>

<h2>Burgers Awaiting to be Devoured</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burger/burger-block devoured=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Devoured Burgers</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burger/burger-block devoured=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="createburger">Burger:</label>
    <input type="text" id="createburger" name="burger">
  </div>

  <div class="form-group">
    <label for="slee">Devour now or eat later?</label><br>
    <input type="radio" name="devoured" value="1" checked> Devour now!<br>
    <input type="radio" name="devoured" value="0"> Eat later
  </div>

  <button type="submit">Submit</button>
</form>

<script type="text/javascript" >
// Make sure we wait to attach our handlers until the DOM is fully loaded.

    $(".change-data").on("click", function(event) {
      let id = $(this).data("id");
      let newDevour = $(this).data("devoured");
  
      let newDevoured = {
        devoured: newDevour
      };
  
      // Send the PUT request.
      $.ajax("/api/burgers/" + id, {
        type: "PUT",
        data: newDevoured
      }).then(
        function() {
          console.log("changes burger status to", newDevoured);
          // Reload the page to get the updated list
          location.reload();
        }
      );
    });
  
    $(".create-form").on("submit", function(event) {
      // Make sure to preventDefault on a submit event.
      event.preventDefault();
  
      var newBurger = {
        burger_name: $("#createburger").val().trim(),
        devoured: $("[name=devoured]:checked").val().trim()
      };
  
      // Send the POST request.
      $.ajax("/api/burgers", {
        type: "POST",
        data: newBurger
      }).then(
        function() {
          console.log("Added new burger!");
          // Reload the page to get the updated list
          location.reload();
        }
      );
    });
  
</script>