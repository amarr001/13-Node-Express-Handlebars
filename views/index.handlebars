
<div class="container">
<div class="row">

<h1 class="mx-auto my-5 burger-title">EAT DA BURGER</h1>

</div>

<div class="row">
<div class="col-4">

<h2 class="burgerColumns">Burger Waitlist</h2>

<ul class="burgerList">
  {{#each burgers}}
    {{#unless devoured}}
      {{> burger/burger-block devoured=true}}
    {{/unless}}
  {{/each}}
</ul>
</div>

<div class="col-4">

<h2 class="burgerColumns">Devoured Burgers</h2>

<ul class="burgerList">
  {{#each burgers}}
    {{#if devoured}}
      {{> burger/burger-block devoured=false}}
    {{/if}}
  {{/each}}
</ul>

    </div>
  </div>


<div class="row">
<div class="col my-2">
<h2 class="my-3 burgerColumns">Add Burger</h2>

<form class="create-form">

  <div class="form-group">
    <label for="createburger">Burger Name:</label>
    <input type="text" id="createburger" name="burger" class="form-control form-control-sm">
  </div>

  <div class="form-group">
    <label for="slee">Devour now or eat later?</label><br>
    <input type="radio" name="devoured" value="1" checked> Devour now!<br>
    <input type="radio" name="devoured" value="0"> Eat later
  </div>

  <button class="btn btn-primary" type="submit">Submit</button>
    </div>
  </div>
</div>
</form>
